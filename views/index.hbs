<div class="d-flex mb-5">
  <ul class="navbar-nav me-auto mb-2 mb-lg-0">
    <li class="nav-item dropdown">
      <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown"
        aria-expanded="false">
        選擇語言
      </a>
      <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
        <li><a class="dropdown-item" href="#">中文</a></li>
        <li><a class="dropdown-item" href="#">English</a></li>
        <li><a class="dropdown-item" href="#">Latin</a></li>
      </ul>
    </li>
  </ul>
  <div class="d-flex">
    <input class="form-control me-2" type="search" placeholder="Key-in what you want to search" aria-label="Search"
      id="searchInput">
    <button class="btn btn-outline-success" type="search" id="searchBtn">Search</button>
  </div>
</div>
<div class="d-flex justify-content-evenly">
  <div class="chinese">
    <h4 class="text-center">中文</h4>
    {{#each chinese}}
    <h5>{{chinese.vocabulary}}</h5>
    <p>{{chinese.explain}}</p>
    <p>{{chinese.partOfSpeech}}</p>
    {{/each}}
  </div>
  <div class="english">
    <h4 class="text-center">English</h4>
    {{#each english}}
    <h5>{{english.vocabulary}}</h5>
    <p>{{english.explain}}</p>
    <p>{{english.partOfSpeech}}</p>
    {{/each}}
  </div>
  <div class="latin">
    <h4 class="text-center">Latin</h4>
    {{#each latin}}
    <h5>{{latin.vocabulary}}</h5>
    <p>{{latin.explain}}</p>
    <p>{{latin.partOfSpeech}}</p>
    {{/each}}
  </div>
</div>
<form action="/add" method="POST">
  <div class="form-group">
    <div class="d-flex justify-content-evenly">
      <div class="card border-primary mb-3" style="max-width: 18rem;">
        <div class="card-header text-center">中文</div>
        <div class="card-body text-primary">
          <h5 class="card-title text-center">單字 :</h5>
          <input type="text" required>
          <p class="card-text text-center">解釋 :</p>
          <input type="text" required>
          <p class="card-text text-center">詞性 :</p>
          <input type="text" required>
        </div>
      </div>
      <div class="card border-secondary mb-3" style="max-width: 18rem;">
        <div class="card-header text-center">English</div>
        <div class="card-body text-secondary">
          <h5 class="card-title text-center">Vocabulary :</h5>
          <input type="text" required>
          <p class="card-text text-center">Explain :</p>
          <input type="text" required>
          <p class="card-text text-center">part of speech :</p>
          <input type="text" required>
        </div>
      </div>
      <div class="card border-success mb-3" style="max-width: 18rem;">
        <div class="card-header text-center">Latin</div>
        <div class="card-body text-success">
          <h5 class="card-title text-center">Vocabulary :</h5>
          <input type="text" required>
          <p class="card-text text-center">Explain :</p>
          <input type="text" required>
          <p class="card-text text-center">part of speech :</p>
          <input type="text" required>
        </div>
      </div>
    </div>
    <div class="d-flex justify-content-center">
      <button type="button" class="btn btn-primary">建立單字卡</button>
    </div>
  </div>
</form>
<script src="/javascripts/dictionary.js"></script>