<div class="d-flex mb-5">
  <ul class="navbar-nav me-auto mb-2 mb-lg-0">
    <select class="custom-select custom-select-lg">
      <option selected>選擇語言</option>
      <option value="chinese">中文</option>
      <option value="english">English</option>
      <option value="latin">Latin</option>
    </select>
  </ul>
  <form class="form-group d-flex" method="GET" action="/search">
    <label for="searchInput">想要查詢的單字：</label>
    <input class="form-control me-2" type="text" placeholder="word.." aria-label="Search" id="searchInput" name="word">
    <button class="btn btn-outline-success" type="submit" id="searchBtn">Search</button>
  </form>
</div>
<div class="d-flex justify-content-evenly">
  <div class="chinese">
    <h4 class="text-center">中文</h4>
    {{#each chinese}}
    <h5>{{chinese.vocabulary}}</h5>
    <p>{{chinese.explain}}</p>
    <p>{{chinese.partOfSpeech}}</p>
    {{/each}}
  </div>
  <div class="english">
    <h4 class="text-center">English</h4>
    {{#each english}}
    <h5>{{english.vocabulary}}</h5>
    <p>{{english.explain}}</p>
    <p>{{english.partOfSpeech}}</p>
    {{/each}}
  </div>
  <div class="latin">
    <h4 class="text-center">Latin</h4>
    {{#each latin}}
    <h5>{{latin.vocabulary}}</h5>
    <p>{{latin.explain}}</p>
    <p>{{latin.partOfSpeech}}</p>
    {{/each}}
  </div>
</div>
<form action="/add" method="POST">
  <div class="form-group">
    <div class="d-flex justify-content-evenly">
      <div class="card border-primary mb-3" style="max-width: 18rem;">
        <div class="card-header text-center">中文</div>
        <div class="card-body text-primary">
          <h5 class="card-title text-center">單字 :</h5>
          <input type="text" required>
          <p class="card-text text-center">解釋 :</p>
          <input type="text" required>
          <p class="card-text text-center">詞性 :</p>
          <input type="text" required>
        </div>
      </div>
      <div class="card border-secondary mb-3" style="max-width: 18rem;">
        <div class="card-header text-center">English</div>
        <div class="card-body text-secondary">
          <h5 class="card-title text-center">Vocabulary :</h5>
          <input type="text" required>
          <p class="card-text text-center">Explain :</p>
          <input type="text" required>
          <p class="card-text text-center">part of speech :</p>
          <input type="text" required>
        </div>
      </div>
      <div class="card border-success mb-3" style="max-width: 18rem;">
        <div class="card-header text-center">Latin</div>
        <div class="card-body text-success">
          <h5 class="card-title text-center">Vocabulary :</h5>
          <input type="text" required>
          <p class="card-text text-center">Explain :</p>
          <input type="text" required>
          <p class="card-text text-center">part of speech :</p>
          <input type="text" required>
        </div>
      </div>
    </div>
    <div class="d-flex justify-content-center">
      <button type="button" class="btn btn-primary">建立單字卡</button>
    </div>
  </div>
</form>
<script src="/javascripts/dictionary.js"></script>